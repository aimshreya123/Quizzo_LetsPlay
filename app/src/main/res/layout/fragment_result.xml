<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ResultFragment">

    <TextView
        android:id="@+id/resultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/work_sans_semibold"
        android:text="Results..."
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/resultTimer"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="145dp"
        android:layout_height="174dp"
        android:layout_marginTop="28dp"
        android:progressDrawable="@drawable/circular_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultTitle" />

    <TextView
        android:id="@+id/resTimerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100%"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/work_sans_semibold"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/resultTimer"
        app:layout_constraintEnd_toEndOf="@+id/resultTimer"
        app:layout_constraintStart_toStartOf="@+id/resultTimer"
        app:layout_constraintTop_toTopOf="@+id/resultTimer" />

    <TextView
        android:id="@+id/correctAnswersTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="392dp"
        android:text="Correct Answers..."
        android:textColor="@color/LightText"
        android:fontFamily="@font/work_sans_semibold"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wrongAnswersTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:text="Wrong Answers..."
        android:textColor="@color/LightText"
        android:fontFamily="@font/work_sans_semibold"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correctAnswersTxt" />

    <TextView
        android:id="@+id/missedAnswersTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:text="Missed Questions..."
        android:textColor="@color/LightText"
        android:fontFamily="@font/work_sans_semibold"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrongAnswersTxt" />

    <TextView
        android:id="@+id/correctScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="392dp"
        android:fontFamily="@font/work_sans_semibold"
        android:text="N/A"
        android:textColor="@color/LightText"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/correctAnswersTxt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wrongScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/work_sans_semibold"
        android:text="N/A"
        android:textColor="@color/LightText"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toEndOf="@+id/wrongAnswersTxt"
        app:layout_constraintTop_toBottomOf="@+id/correctScore" />

    <TextView
        android:id="@+id/missedScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/work_sans_semibold"
        android:text="N/A"
        android:textColor="@color/LightText"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toEndOf="@+id/missedAnswersTxt"
        app:layout_constraintTop_toBottomOf="@+id/wrongScore" />

    <Button
        android:id="@+id/goToHomebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:background="@drawable/primary_btn_bg"
        android:fontFamily="@font/work_sans_semibold"
        android:text="GO TO HOME"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>